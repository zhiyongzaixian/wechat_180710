/* pages/listTmp/listTmp.wxss */
.tmpContainer {
	display: flex;
	flex-direction: column;
	border-top: 1rpx solid #eee;
	border-bottom: 1rpx solid #eee;
	margin: 6rpx 0;
}

.avatar_date {
	padding: 10rpx;
}
.avatar_date image {
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;
}

.avatar_date text {
	font-size: 32rpx;
	margin-left: 10rpx;
	vertical-align: middle;
}

.company {
	margin-left: 10rpx;
	font-size: 40rpx;
	font-weight: bold;
}

.listImg {
	width: 100%;
	height: 400rpx;
}

.content {
	font-size: 32rpx;
	text-indent: 32rpx;
	letter-spacing: 5rpx;
}

.collection_share_container image {
	width: 32rpx;
	height: 32rpx;
	vertical-align: middle;
	margin-right: 10rpx;
}

.collection_share_container text {
	vertical-align: middle;
	font-size: 24rpx;
	margin-right: 10rpx;
}