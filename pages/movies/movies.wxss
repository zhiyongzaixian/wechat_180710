/* pages/movies/movies.wxss */
.moviesContainer {
	display: flex;
	padding: 10rpx;
	border-bottom: 1rpx solid #eee;
}
.moviesImg {
	width: 128rpx;
	height: 128rpx;
}

.moviesInfo {
	display: flex;
	flex-direction: column;
	margin-left: 20rpx;
	width: 70%;
}

.movies_name {
	font-size: 32rpx;
	color: #333;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.movies_year {
	font-size: 28rpx;
	color: #999;
	margin: 7rpx 0;
}
.movies_dir{
	font-size: 30rpx;
	color: #666;
}

.moviesRating {
	font-size: 40rpx;
	font-weight: bold;
	color: red;
}